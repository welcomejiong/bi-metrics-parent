				<jdbc.properties>${dir.name}/jdbc.properties</jdbc.properties>
				<projectName>cat_rocksdb_dc02-${version}</projectName>
			</properties>
		</profile>
		
		<profile>
			<id>tran</id>
			<activation>
				<property>
					<name>env</name>
					<value>tran</value>
				</property>
			</activation>
			<properties>
				<dir.name>envs/tran</dir.name>
				<jdbc.properties>${dir.name}/jdbc.properties</jdbc.properties>
				<projectName>cat_rocksdb_tran-${version}</projectName>
			</properties>
		</profile>
		
		<profile>
			<id>tran02</id>
			<activation>
				<property>
					<name>env</name>
					<value>tran02</value>
				</property>
			</activation>
			<properties>
				<dir.name>envs/tran02</dir.name>
				<jdbc.properties>${dir.name}/jdbc.properties</jdbc.properties>
				<projectName>cat_rocksdb_tran02-${version}</projectName>
			</properties>
		</profile>
		
		<profile>
			<id>game</id>
			<activation>
				<property>
